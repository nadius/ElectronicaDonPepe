<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>TpFinal.servlets.index</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ventaIndex</servlet-name>
    <servlet-class>TpFinal.servlets.ventas</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ventaNueva</servlet-name>
    <servlet-class>TpFinal.servlets.VentaNueva</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ventaConsulta</servlet-name>
    <servlet-class>TpFinal.servlets.VentaConsulta</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ventaDetalle</servlet-name>
    <servlet-class>TpFinal.servlets.VentaDetalle</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>TpFinal.servlets.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>TpFinal.servlets.Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>error</servlet-name>
    <servlet-class>TpFinal.servlets.ManejarError</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>admin</servlet-name>
    <servlet-class>TpFinal.servlets.Administrador</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>adicionalReporte</servlet-name>
    <servlet-class>TpFinal.servlets.AdicionalesGenerarReporte</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>adicionalModificar</servlet-name>
    <servlet-class>TpFinal.servlets.AdicionalesModificarMontos</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ventaIndex</servlet-name>
    <url-pattern>/venta</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ventaNueva</servlet-name>
    <url-pattern>/venta/alta</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ventaConsulta</servlet-name>
    <url-pattern>/venta/consulta</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ventaDetalle</servlet-name>
    <url-pattern>/venta/consulta/detalle</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>adicionalReporte</servlet-name>
    <url-pattern>/adicional/reporte</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>adicionalModificar</servlet-name>
    <url-pattern>/adicional/modificar</url-pattern>
  </servlet-mapping>
</web-app>